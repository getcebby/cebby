---
import FeedbackForm from './FeedbackForm.astro';
---

<div class="bg-gradient-to-r from-indigo-500/90 via-purple-500/90 to-pink-500/90 backdrop-blur-sm text-white py-2.5">
    <div
        class="container max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 flex flex-col sm:flex-row justify-between items-center"
    >
        <div class="text-xs sm:text-sm mb-2 sm:mb-0 font-medium">
            Proudly bootstrapped during Cebu #hacktoberfest 2024
        </div>
        <div class="flex items-center gap-3">
            <a href="/" class="text-sm font-medium hover:text-white/80 transition-colors duration-200 md:hidden">
                Home
            </a>
            <a
                href="/calendar"
                class="text-sm font-medium hover:text-white/80 transition-colors duration-200 hidden md:block"
            >
                Calendar
            </a>

            <a href="/partners" class="text-sm font-medium hover:text-white/80 transition-colors duration-200">
                Partners
            </a>
            <FeedbackForm />
            <a
                href="https://getcebby.notion.site"
                class="text-sm font-medium hover:text-white/80 transition-colors duration-200 flex items-center gap-1"
                target="_blank"
            >
                Roadmap
                <svg class="w-3 h-3" viewBox="0 0 20 20" fill="currentColor">
                    <path
                        fill-rule="evenodd"
                        d="M5.22 14.78a.75.75 0 001.06 0l7.22-7.22v5.69a.75.75 0 001.5 0v-7.5a.75.75 0 00-.75-.75h-7.5a.75.75 0 000 1.5h5.69l-7.22 7.22a.75.75 0 000 1.06z"
                        clip-rule="evenodd"></path>
                </svg>
            </a>
            <a
                href="https://www.facebook.com/getcebby"
                target="_blank"
                rel="noopener noreferrer"
                class="text-sm hover:text-white/80 transition-colors duration-200"
                title="View the source code on GitHub"
            >
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="w-5 h-5"
                    fill="currentColor"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                    stroke-width="1"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    class="lucide lucide-facebook"
                    ><path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path></svg
                >
            </a>
            <a
                href="https://github.com/dorelljames/event-ni"
                target="_blank"
                rel="noopener noreferrer"
                class="text-sm hover:text-white/80 transition-colors duration-200"
                title="View the source code on GitHub"
            >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path
                        d="M12 0C5.37 0 0 5.37 0 12c0 5.3 3.438 9.8 8.205 11.385.6.11.82-.26.82-.577 0-.285-.01-1.04-.015-2.04-3.338.725-4.042-1.61-4.042-1.61-.546-1.385-1.333-1.755-1.333-1.755-1.09-.745.083-.73.083-.73 1.205.085 1.84 1.24 1.84 1.24 1.07 1.835 2.805 1.305 3.49.998.108-.775.42-1.305.763-1.605-2.665-.305-5.466-1.335-5.466-5.93 0-1.31.47-2.38 1.235-3.22-.125-.305-.535-1.53.115-3.18 0 0 1.005-.32 3.3 1.23.96-.265 1.98-.4 3-.405 1.02.005 2.04.14 3 .405 2.28-1.55 3.285-1.23 3.285-1.23.655 1.65.245 2.875.12 3.18.77.84 1.235 1.91 1.235 3.22 0 4.61-2.805 5.62-5.475 5.92.43.37.815 1.1.815 2.22 0 1.605-.015 2.895-.015 3.285 0 .32.215.695.825.575C20.565 21.795 24 17.295 24 12c0-6.63-5.37-12-12-12z"
                    ></path>
                </svg>
            </a>
        </div>
    </div>
</div>
