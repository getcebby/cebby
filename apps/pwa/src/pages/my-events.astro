---
export const prerender = false;

import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import SEO from '../components/SEO.astro';

const title = 'My Events - Cebby';
const description = 'View all your upcoming and past events you\'ve RSVPed to.';
---

<Layout title={title}>
    <Fragment slot="head">
        <SEO title={title} description={description} image="/og.png" type="website" />
    </Fragment>

    <Header />

    <main class="min-h-screen bg-white py-8">
        <div class="container max-w-4xl mx-auto px-4 sm:px-6">
            <!-- Page Header -->
            <div class="mb-8">
                <h1 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-2">My Events</h1>
            </div>

            <!-- Loading State -->
            <div id="loadingState" class="flex flex-col items-center justify-center py-16">
                <div class="w-12 h-12 border-4 border-[#8234E6] border-t-transparent rounded-full animate-spin mb-4"></div>
                <p class="text-gray-600">Loading your events...</p>
            </div>

            <!-- Error State -->
            <div id="errorState" class="hidden bg-red-50 border border-red-200 rounded-xl p-6 text-center">
                <svg class="w-12 h-12 text-red-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <h3 class="text-lg font-semibold text-gray-900 mb-2">Unable to load events</h3>
                <p class="text-gray-600 mb-4">Please try again or sign in to view your events.</p>
                <button onclick="window.location.reload()" class="inline-flex items-center px-4 py-2 bg-[#8234E6] text-white rounded-lg hover:bg-[#6c2bc0] transition-colors">
                    Retry
                </button>
            </div>

            <!-- Not Authenticated State -->
            <div id="notAuthState" class="hidden bg-blue-50 border border-blue-200 rounded-xl p-8 text-center">
                <svg class="w-16 h-16 text-blue-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
                <h3 class="text-xl font-bold text-gray-900 mb-2">Sign in to view your events</h3>
                <p class="text-gray-600 mb-6">Create or sign in to your OneCebby account to manage your event registrations.</p>
                <button id="signInButton" class="inline-flex items-center px-6 py-3 bg-[#8234E6] text-white font-medium rounded-lg hover:bg-[#6c2bc0] transition-all">
                    Sign In
                </button>
            </div>

            <!-- Empty State -->
            <div id="emptyState" class="hidden bg-gray-50 border border-gray-200 rounded-xl p-8 text-center">
                <svg class="w-16 h-16 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
                <h3 class="text-xl font-bold text-gray-900 mb-2">No events yet</h3>
                <p class="text-gray-600 mb-6">Start exploring and register for upcoming tech events in Cebu!</p>
                <a href="/events" class="inline-flex items-center px-6 py-3 bg-[#8234E6] text-white font-medium rounded-lg hover:bg-[#6c2bc0] transition-all">
                    Browse Events
                    <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                    </svg>
                </a>
            </div>

            <!-- Events Content -->
            <div id="eventsContent" class="hidden">
                <!-- Tabs -->
                <div class="w-full flex justify-end">
                    <div class="inline-flex rounded-lg bg-gray-100 p-1 mb-6 ">
                        <button id="upcomingTab" class="tab-button active px-4 py-2 text-sm font-medium rounded-md transition-all">
                            Upcoming
                        </button>
                        <button id="pastTab" class="tab-button px-4 py-2 text-sm font-medium rounded-md transition-all">
                            Past
                        </button>
                    </div>
                </div>
                
                <!-- Upcoming Events -->
                <div id="upcomingEvents" class="space-y-6">
                    <!-- Events will be inserted here by JavaScript -->
                </div>

                <!-- Past Events -->
                <div id="pastEvents" class="hidden space-y-6">
                    <!-- Events will be inserted here by JavaScript -->
                </div>
            </div>
        </div>
    </main>
</Layout>

<style>
    .tab-button {
        color: #6b7280;
    }
    
    .tab-button.active {
        background-color: white;
        color: #111827;
        box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
    }
    
    .tab-button:hover:not(.active) {
        color: #374151;
    }
</style>

<script src="../lib/auth-client.ts"></script>
<script>
    // Store the last loaded user ID to detect account changes
    let lastLoadedUserId: string | null = null;

    interface EventRegistration {
        id: string;
        event_id: number;
        status: string;
        checked_in_at: string | null;
        registered_at: string;
        events: {
            id: number;
            name: string;
            start_time: string;
            end_time: string | null;
            location: string | null;
            location_details: any;
            cover_photo: string | null;
            slug: string | null;
            accounts: {
                name: string;
            } | null;
        };
    }

    function getUserIdFromToken(token: string): string | null {
        try {
            const tokenParts = token.split('.');
            if (tokenParts.length === 3) {
                const payload = tokenParts[1];
                const base64 = payload.replace(/-/g, '+').replace(/_/g, '/');
                const padded = base64 + '=='.substring(0, (4 - base64.length % 4) % 4);
                const decoded = atob(padded);
                const tokenPayload = JSON.parse(decoded);
                return tokenPayload.sub || null;
            }
        } catch (error) {
            console.error('Error decoding token:', error);
        }
        return null;
    }

    async function waitForAuthClient(): Promise<boolean> {
        return new Promise((resolve) => {
            if (typeof window !== 'undefined' && window.authClient) {
                resolve(true);
                return;
            }
            
            const checkInterval = setInterval(() => {
                if (typeof window !== 'undefined' && window.authClient) {
                    clearInterval(checkInterval);
                    resolve(true);
                }
            }, 100);
            
            setTimeout(() => {
                clearInterval(checkInterval);
                resolve(false);
            }, 5000);
        });
    }

    function formatEventDate(dateStr: string): string {
        const date = new Date(dateStr);
        const now = new Date();
        const today = new Date(now.getFullYear(), now.getMonth(), now.getDate());
        const eventDate = new Date(date.getFullYear(), date.getMonth(), date.getDate());
        
        const diffDays = Math.floor((eventDate.getTime() - today.getTime()) / (1000 * 60 * 60 * 24));
        
        if (diffDays === 0) return 'Today';
        if (diffDays === 1) return 'Tomorrow';
        if (diffDays > 1 && diffDays < 7) return date.toLocaleDateString('en-US', { weekday: 'long' });
        
        return date.toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: date.getFullYear() !== now.getFullYear() ? 'numeric' : undefined });
    }

    function formatEventTime(dateStr: string): string {
        const date = new Date(dateStr);
        const dayOfWeek = date.toLocaleDateString('en-US', { weekday: 'long' });
        const time = date.toLocaleTimeString('en-US', { hour: 'numeric', minute: '2-digit', hour12: true });
        return `${dayOfWeek}, ${time}`;
    }

    function getLocation(event: EventRegistration['events']): string {
        let location = event.location;
        
        if (!location || location.trim() === '' || location.toLowerCase() === 'online') {
            if (event.location_details) {
                try {
                    const locationDetails = typeof event.location_details === 'string' 
                        ? JSON.parse(event.location_details) 
                        : event.location_details;
                    
                    const detailsLocation = locationDetails?.name || locationDetails?.address;
                    if (detailsLocation && detailsLocation.trim() !== '') {
                        location = detailsLocation;
                    } else {
                        location = location || 'TBA';
                    }
                } catch (e) {
                    location = location || 'TBA';
                }
            } else {
                location = location || 'TBA';
            }
        }
        
        return location;
    }

    function groupEventsByDate(events: EventRegistration[]): Map<string, EventRegistration[]> {
        const grouped = new Map<string, EventRegistration[]>();
        
        events.forEach(reg => {
            const dateLabel = formatEventDate(reg.events.start_time);
            if (!grouped.has(dateLabel)) {
                grouped.set(dateLabel, []);
            }
            grouped.get(dateLabel)!.push(reg);
        });
        
        return grouped;
    }

    function createEventCard(reg: EventRegistration): string {
        const event = reg.events;
        const eventUrl = `/events/${event.slug || event.id}`;
        const time = formatEventTime(event.start_time);
        const location = getLocation(event);
        const host = event.accounts?.name || 'Cebby';
        const coverPhoto = event.cover_photo || '/og.png';
        
        const statusBadge = reg.checked_in_at 
            ? '<span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-100 text-green-800"><svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path></svg>Attended</span>'
            : '<span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-blue-100 text-blue-800">Going</span>';
        
        return `
            <a href="${eventUrl}" class="block group">
                <div class="flex gap-4 p-4 rounded-xl border border-gray-200 hover:border-[#8234E6] hover:shadow-md transition-all bg-white">
                    <!-- Event Image -->
                    <div class="flex-shrink-0">
                        <img src="${coverPhoto}" alt="${event.name}" class="w-24 h-24 sm:w-28 sm:h-28 object-cover rounded-lg" />
                    </div>
                    
                    <!-- Event Details -->
                    <div class="flex-1 min-w-0">
                        <div class="flex items-start justify-between gap-2 mb-2">
                            <div class="flex-1 min-w-0">
                                <h3 class="text-lg font-semibold text-gray-900 group-hover:text-[#8234E6] transition-colors line-clamp-2">${event.name}</h3>
                            </div>
                            ${statusBadge}
                        </div>
                        
                        <div class="space-y-1.5 text-sm text-gray-600">
                            <div class="flex items-center gap-2">
                                <svg class="w-4 h-4 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                                </svg>
                                <span class="truncate">${time}</span>
                            </div>
                            
                            <div class="flex items-center gap-2">
                                <svg class="w-4 h-4 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                                </svg>
                                <span class="truncate">${location}</span>
                            </div>
                            
                            <div class="flex items-center gap-2">
                                <svg class="w-4 h-4 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                                </svg>
                                <span class="truncate">${host}</span>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        `;
    }

    function renderEvents(events: EventRegistration[], container: HTMLElement) {
        if (events.length === 0) {
            container.innerHTML = '<p class="text-gray-500 text-center py-8">No events found</p>';
            return;
        }
        
        const grouped = groupEventsByDate(events);
        let html = '';
        
        grouped.forEach((dateEvents, dateLabel) => {
            html += `
                <div class="space-y-3">
                    <h2 class="text-sm font-semibold text-gray-900 uppercase tracking-wide">${dateLabel}</h2>
                    <div class="space-y-3">
                        ${dateEvents.map(reg => createEventCard(reg)).join('')}
                    </div>
                </div>
            `;
        });
        
        container.innerHTML = html;
    }

    async function loadMyEvents() {
        const loadingState = document.getElementById('loadingState')!;
        const errorState = document.getElementById('errorState')!;
        const notAuthState = document.getElementById('notAuthState')!;
        const emptyState = document.getElementById('emptyState')!;
        const eventsContent = document.getElementById('eventsContent')!;

        try {
            const authReady = await waitForAuthClient();
            if (!authReady) {
                console.log('Auth client not ready');
                loadingState.classList.add('hidden');
                notAuthState.classList.remove('hidden');
                return;
            }

            const isAuth = await window.authClient.isAuthenticated();
            if (!isAuth) {
                console.log('User not authenticated');
                loadingState.classList.add('hidden');
                notAuthState.classList.remove('hidden');
                return;
            }

            const token = await window.authClient.getAccessToken();
            if (!token) {
                console.log('No access token');
                loadingState.classList.add('hidden');
                notAuthState.classList.remove('hidden');
                return;
            }

            // Check if user has changed (different account logged in)
            const currentUserId = getUserIdFromToken(token);
            const userChanged = currentUserId && lastLoadedUserId && currentUserId !== lastLoadedUserId;
            
            // Fetch user's events with cache busting only when user changed
            const cacheBuster = userChanged ? `?t=${Date.now()}` : '';
            const response = await fetch(`/api/my-events${cacheBuster}`, {
                headers: {
                    'Authorization': `Bearer ${token}`,
                },
            });

            if (!response.ok) {
                throw new Error('Failed to fetch events');
            }

            const data = await response.json();
            const { upcoming = [], past = [] } = data;

            loadingState.classList.add('hidden');

            if (upcoming.length === 0 && past.length === 0) {
                emptyState.classList.remove('hidden');
                return;
            }

            // Render events
            const upcomingContainer = document.getElementById('upcomingEvents')!
            const pastContainer = document.getElementById('pastEvents')!;

            renderEvents(upcoming, upcomingContainer);
            renderEvents(past, pastContainer);

            // Store the current user ID for comparison on next load
            if (currentUserId) {
                lastLoadedUserId = currentUserId;
            }

            eventsContent.classList.remove('hidden');

        } catch (error) {
            console.error('Error loading events:', error);
            loadingState.classList.add('hidden');
            errorState.classList.remove('hidden');
        }
    }

    // Tab switching
    document.getElementById('upcomingTab')?.addEventListener('click', () => {
        document.getElementById('upcomingTab')!.classList.add('active');
        document.getElementById('pastTab')!.classList.remove('active');
        document.getElementById('upcomingEvents')!.classList.remove('hidden');
        document.getElementById('pastEvents')!.classList.add('hidden');
    });

    document.getElementById('pastTab')?.addEventListener('click', () => {
        document.getElementById('pastTab')!.classList.add('active');
        document.getElementById('upcomingTab')!.classList.remove('active');
        document.getElementById('pastEvents')!.classList.remove('hidden');
        document.getElementById('upcomingEvents')!.classList.add('hidden');
    });

    // Sign in button
    document.getElementById('signInButton')?.addEventListener('click', async () => {
        if (window.authClient) {
            await window.authClient.signIn(window.location.href);
        }
    });

    // Load events on page load
    loadMyEvents();
</script>
</Layout>
