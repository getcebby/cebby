---
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <!-- Hero Section -->
  <section
    class="relative min-h-[90vh] flex items-center bg-white overflow-hidden"
  >
    <div class="max-w-6xl mx-auto w-full relative z-10">
      <div class="grid md:grid-cols-2 items-center">
        <!-- Left Content -->
        <div class="px-4 md:px-6 lg:px-8 py-16">
          <img src="/logo.svg" alt="Cebby Logo" class="h-12 mb-8" />
          <h1
            class="text-4xl md:text-6xl font-bold mb-6 text-gray-900 leading-tight"
          >
            Discover Events That Matter
          </h1>
          <p class="text-xl text-gray-600 mb-8 leading-relaxed">
            Find and manage events across multiple platforms in one place.
            Perfect for organizers, partners, and community members.
          </p>
          <div class="flex flex-wrap gap-4">
            <a
              href="/events"
              class="px-6 py-3 bg-purple-600 text-white rounded-lg font-medium hover:bg-purple-700 transition-colors"
            >
              Explore Events
            </a>
            <a
              href="/partner"
              class="px-6 py-3 border border-gray-300 text-gray-700 rounded-lg font-medium hover:border-gray-400 transition-colors"
            >
              Partner with Us
            </a>
          </div>
        </div>
      </div>
    </div>

    <!-- Right Image -->
    <div
      class="hidden md:block absolute right-0 top-1/2 -translate-y-1/2 w-[50%] h-full"
    >
      <img
        src="/illustrations/desktop.svg"
        alt="Event Discovery"
        class="w-full h-full object-cover object-left rounded-l-2xl"
      />
    </div>
  </section>

  <!-- Core Benefits Section -->
  <section class="py-24 px-4 bg-gray-50">
    <div class="max-w-6xl mx-auto">
      <div class="text-center mb-20">
        <h2
          class="text-4xl md:text-5xl font-bold mb-6 text-gray-900 leading-tight"
        >
          The Value of Cebby
        </h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Empowering event organizers and community members with powerful tools
          and insights
        </p>
      </div>

      <div class="space-y-48">
        <!-- Enhanced Visibility -->
        <div class="grid md:grid-cols-2 gap-12 items-center">
          <div class="order-2 md:order-1">
            <div
              class="inline-flex items-center px-4 py-2 rounded-full text-sm font-medium bg-indigo-100 text-indigo-800 mb-6"
            >
              For Organizers
            </div>
            <h3 class="text-3xl font-bold mb-4 text-gray-900">
              Enhanced Visibility
            </h3>
            <p class="text-lg text-gray-600 leading-relaxed mb-6">
              Expand your event's reach to an aggregated audience, opening up
              new promotional channels and reaching targeted communities.
            </p>
            <ul class="space-y-4">
              {
                [
                  "Cross-platform promotion",
                  "Targeted audience reach",
                  "Automated sharing",
                ].map((feature) => (
                  <li class="flex items-start">
                    <svg
                      class="w-5 h-5 text-indigo-600 mt-1 mr-3"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke="currentColor"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M5 13l4 4L19 7"
                      />
                    </svg>
                    <span class="text-gray-600">{feature}</span>
                  </li>
                ))
              }
            </ul>
            <a
              href="/features/visibility"
              class="inline-flex items-center mt-8 text-indigo-600 hover:text-indigo-700 font-medium"
            >
              Learn more about visibility
              <svg class="w-5 h-5 ml-2" viewBox="0 0 24 24" fill="none">
                <path
                  d="M5 12H19M19 12L12 5M19 12L12 19"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"></path>
              </svg>
            </a>
          </div>
          <div class="order-1 md:order-2">
            <img
              src="/illustrations/current-location.svg"
              alt="Enhanced Visibility"
              class="rounded-2xl w-[80%]"
            />
          </div>
        </div>

        <!-- Performance Analytics -->
        <div class="grid md:grid-cols-2 gap-12 items-center">
          <div class="order-2">
            <img
              src="/illustrations/data-reports.svg"
              alt="Performance Analytics"
              class="rounded-2xl w-[80%]"
            />
          </div>
          <div class="order-2">
            <div
              class="inline-flex items-center px-4 py-2 rounded-full text-sm font-medium bg-indigo-100 text-indigo-800 mb-6"
            >
              Premium Feature
            </div>
            <span
              class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-gray-800"
            >
              Coming Soon
            </span>
            <h3 class="text-3xl font-bold mb-4 text-gray-900">
              Performance Analytics
            </h3>
            <p class="text-lg text-gray-600 leading-relaxed mb-6">
              Get valuable insights into engagement metrics, demographics, and
              trends to optimize your event planning and assess ROI.
            </p>
            <ul class="space-y-4">
              {
                [
                  "Engagement tracking",
                  "Audience demographics",
                  "ROI measurement",
                ].map((feature) => (
                  <li class="flex items-start">
                    <svg
                      class="w-5 h-5 text-indigo-600 mt-1 mr-3"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke="currentColor"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M5 13l4 4L19 7"
                      />
                    </svg>
                    <span class="text-gray-600">{feature}</span>
                  </li>
                ))
              }
            </ul>
            <a
              href="/features/analytics"
              class="inline-flex items-center mt-8 text-indigo-600 hover:text-indigo-700 font-medium"
            >
              Learn more about analytics
              <svg class="w-5 h-5 ml-2" viewBox="0 0 24 24" fill="none">
                <path
                  d="M5 12H19M19 12L12 5M19 12L12 19"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"></path>
              </svg>
            </a>
          </div>
        </div>

        <!-- Community Management -->
        <div class="grid md:grid-cols-2 gap-12 items-center">
          <div class="order-2 md:order-1">
            <div
              class="inline-flex items-center px-4 py-2 rounded-full text-sm font-medium bg-indigo-100 text-indigo-800 mb-6"
            >
              For Communities
            </div>
            <h3 class="text-3xl font-bold mb-4 text-gray-900">
              Community Management
            </h3>
            <p class="text-lg text-gray-600 leading-relaxed mb-6">
              Effortlessly manage and update events across multiple platforms
              from a central source, keeping your community engaged.
            </p>
            <ul class="space-y-4">
              {
                [
                  "Centralized management",
                  "Multi-platform updates",
                  "Community engagement tools",
                ].map((feature) => (
                  <li class="flex items-start">
                    <svg
                      class="w-5 h-5 text-indigo-600 mt-1 mr-3"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke="currentColor"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M5 13l4 4L19 7"
                      />
                    </svg>
                    <span class="text-gray-600">{feature}</span>
                  </li>
                ))
              }
            </ul>
            <a
              href="/features/community-management"
              class="inline-flex items-center mt-8 text-indigo-600 hover:text-indigo-700 font-medium"
            >
              Explore community features
              <svg class="w-5 h-5 ml-2" viewBox="0 0 24 24" fill="none">
                <path
                  d="M5 12H19M19 12L12 5M19 12L12 19"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"></path>
              </svg>
            </a>
          </div>
          <div class="order-1 md:order-2">
            <img
              src="/illustrations/multiple-platforms.svg"
              alt="Community Management"
              class="rounded-2xl w-[80%]"
            />
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- How It Works -->
  <section class="py-24 px-4 bg-white">
    <div class="max-w-6xl mx-auto">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-5xl font-bold mb-6 text-gray-900">
          How It Works
        </h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Join Cebby and transform how you discover and manage events
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-12">
        {
          [
            {
              step: 1,
              title: "Discover Events",
              description:
                "Find events that match your interests from multiple platforms in one place.",
              icon: "ðŸ”",
            },
            {
              step: 2,
              title: "Connect & Engage",
              description:
                "Join communities, follow organizers, and participate in local events.",
              icon: "ðŸ¤",
            },
            {
              step: 3,
              title: "Grow Together",
              description:
                "Contribute to the platform's growth and help shape the future of event discovery.",
              icon: "ðŸŒ±",
            },
          ].map((item) => (
            <div class="relative">
              <div class="absolute -left-4 -top-4 w-12 h-12 rounded-full bg-indigo-600 text-white flex items-center justify-center text-xl font-bold">
                {item.step}
              </div>
              <div class="p-8 rounded-xl bg-gray-50 border border-gray-100">
                <div class="text-4xl mb-6">{item.icon}</div>
                <h3 class="text-2xl font-semibold mb-4 text-gray-900">
                  {item.title}
                </h3>
                <p class="text-gray-600 leading-relaxed">{item.description}</p>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Premium Analytics CTA -->
  <section class="py-24 px-4 bg-indigo-700 relative overflow-hidden">
    <div class="max-w-4xl mx-auto relative">
      <div class="text-center">
        <h2 class="text-3xl md:text-5xl font-bold mb-6 text-white">
          Get Early Access to Premium Analytics
        </h2>
        <p class="text-xl mb-12 text-indigo-100 max-w-2xl mx-auto">
          Join the waitlist for our upcoming premium features and be the first
          to access powerful event analytics and insights.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="https://dorelljames.notion.site/13a3f8eda0708062b70fc97987d7ba32"
            target="_blank"
            class="inline-block px-8 py-4 bg-white text-indigo-700 rounded-lg font-semibold hover:bg-indigo-50 transition-all"
          >
            Join the Waitlist
          </a>
          <a
            href="/features"
            class="inline-block px-8 py-4 border-2 border-white text-white rounded-lg font-semibold hover:bg-white/10 transition-all"
          >
            Learn More
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>

